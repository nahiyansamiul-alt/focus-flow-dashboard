{
  "name": "focusflow",
  "version": "1.0.0",
  "description": "FocusFlow - Productivity Dashboard",
  "author": "Your Name",
  "homepage": "./",
  "main": "electron/main.js",
  "preload": "electron/preload.js",
  "homepage-url": "https://github.com/yourname/focusflow",
  "build": {
    "appId": "com.focusflow.app",
    "productName": "FocusFlow",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "backend/node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist_electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png"
    }
  }
}
